@model IEnumerable<Two.Wishlist>

@{
    ViewBag.Title = "Index";
}
<style>
    th {
        background-color: #64a867;
        color: white;
    }
</style>
<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<br />
<br />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css" rel='stylesheet' type='text/css'>


<h2>Wishlists: Search Results</h2>
<div class="container">
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <div class="panel panel-default panel-table">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col col-xs-6">
                            <h3 class="panel-title">WishList</h3>
                        </div>
                        @if (!User.IsInRole("Admin"))
                        {
                        <div class="col col-xs-6 text-right">
                                @Html.ActionLink("Create New", "Create")
                        </div>
                        }
                    </div>
                </div>
                <div class="panel-body">
                    <table class="table table-striped table-bordered table-list">
                        <thead>
                            <tr>
                                
                                <th>
                                    @Html.DisplayNameFor(model => model.WishMedName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.RequestAmount)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Comment)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.RequesterID)
                                </th>
                                <th><em class="fa fa-cog  style=" align-content:center""></em></th>
                               </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                   
                                    <td>
                                        @Html.DisplayFor(modelItem => item.WishMedName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.RequestAmount)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Comment)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.RequesterID)
                                    </td>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <td align="center">
                                            @Html.ActionLink("Edit", "Edit", new { id = item.WishID }) |
                                            @Html.ActionLink("Details", "Details", new { id = item.WishID }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.WishID })
                                        </td>
                                    }
                                    else
                                    {
                                        <td>
                                            Only Accessible by admin.
                                        </td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                    @Html.ActionLink("Back to List", "Index")
                </div>
            </div>
        </div>
    </div>
</div>
